# Student Record Management System using Doubly Linked List

class Node:
"""Node to store student data"""
def 	init	(self, roll_no, name, marks): self.roll_no = roll_no
self.name = name self.marks = marks self.next = None self.prev = None


class StudentList:
"""Doubly Linked List implementation""" def 	init	(self):
self.head = None

def add_student(self, roll_no, name, marks): """Add a new student record at the end""" new_node = Node(roll_no, name, marks)
if not self.head: self.head = new_node
print(f"âœ… Added: {name} (Roll No: {roll_no}, Marks: {marks})")
return
temp = self.head while temp.next:
temp = temp.next temp.next = new_node new_node.prev = temp
print(f"âœ… Added: {name} (Roll No: {roll_no}, Marks: {marks})")

def delete_student(self, roll_no):
"""Delete student record by roll number""" temp = self.head
while temp:
if temp.roll_no == roll_no: if temp.prev:
temp.prev.next = temp.next else:
self.head = temp.next if temp.next:
temp.next.prev = temp.prev
print(f"ðŸ—‘ Deleted record of Roll No: {roll_no}") return
 
temp = temp.next
print(f"âš  Record with Roll No {roll_no} not found.")

def update_student(self, roll_no, new_name=None, new_marks=None): """Update student details"""
temp = self.head while temp:
if temp.roll_no == roll_no: if new_name:
temp.name = new_name if new_marks is not None:
temp.marks = new_marks
print(f"âœ Updated Roll No: {roll_no} â†’ Name: {temp.name},
Marks: {temp.marks}")
return
temp = temp.next
print(f"âš  Record with Roll No {roll_no} not found.")

def search_student(self, roll_no):
"""Search and display a student record""" temp = self.head
while temp:
if temp.roll_no == roll_no:
print(f"ðŸ” Found: Roll No: {temp.roll_no}, Name:
{temp.name}, Marks: {temp.marks}")
return
temp = temp.next
print(f"âš  Record with Roll No {roll_no} not found.")

def sort_records(self, key="marks", ascending=True): """Sort records by roll number or marks"""
if not self.head:
print("âš  No records to sort.")
return

swapped = True while swapped:
swapped = False temp = self.head while temp.next:
first = temp.marks if key == "marks" else temp.roll_no second = temp.next.marks if key == "marks" else
temp.next.roll_no
if (ascending and first > second) or (not ascending and first < second):
 

temp.roll_no
 
temp.roll_no, temp.next.roll_no = temp.next.roll_no, temp.name, temp.next.name = temp.next.name, temp.name
 

temp.marks
 
temp.marks, temp.next.marks = temp.next.marks,

swapped = True temp = temp.next
 
order = "ascending" if ascending else "descending" print(f"âœ… Records sorted by {key} in {order} order.")

def display_records(self): """Display all student records""" if not self.head:
print("âš  No records available.")
return
print("\nðŸ“‹ Student Records:") temp = self.head
while temp:
print(f" Roll No: {temp.roll_no} | Name: {temp.name} | Marks:
{temp.marks}")
temp = temp.next print()


# ----- DEMONSTRATION -----
students = StudentList()

# Add students students.add_student(101, "Amit", 85)
students.add_student(102, "Sneha", 90)
students.add_student(103, "Ravi", 78)
students.add_student(104, "Priya", 92)

# Display all students.display_records()

# Update a record students.update_student(103, new_marks=82)

# Search a student students.search_student(102)

# Sort by marks (descending) students.sort_records(key="marks", ascending=False) students.display_records()

# Delete a record students.delete_student(101) students.display_records()
 
