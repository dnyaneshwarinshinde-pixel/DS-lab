# Hash Table implementation using Chaining and Division Method

class HashTable:
def 	init	(self, size=10): self.size = size
self.table = [[] for _ in range(size)] # Each slot holds a list for chaining

def hash_function(self, key):
"""Hash function using division method""" return key % self.size

def insert(self, key, value):
"""Insert key-value pair into hash table""" index = self.hash_function(key)
# Check if key already exists â†’ update it for pair in self.table[index]:
if pair[0] == key: pair[1] = value
print(f"âœ Updated key {key} with new value '{value}'")
return
# Otherwise, insert new key-value pair self.table[index].append([key, value])
print(f"âœ… Inserted: ({key}, '{value}') at index {index}")

def search(self, key):
"""Search for a key in the hash table""" index = self.hash_function(key)
for pair in self.table[index]: if pair[0] == key:
print(f"ğŸ” Found: Key {key} â†’ Value '{pair[1]}'")
return pair[1] print(f"âš  Key {key} not found.") return None

def delete(self, key):
"""Delete a key-value pair""" index = self.hash_function(key) for pair in self.table[index]:
if pair[0] == key: self.table[index].remove(pair)
print(f"ğŸ—‘ Deleted key {key} from index {index}")
return
print(f"âš  Key {key} not found for deletion.")
 

def display(self):
"""Display the entire hash table"""
print("\nğŸ“‹ Hash Table State:") for i in range(self.size):
print(f"Index {i}: {self.table[i]}") print()


# ----- DEMONSTRATION -----
hash_table = HashTable()

# Insert key-value pairs hash_table.insert(10, "Alice")
hash_table.insert(25, "Bob")	# Collision with 5 (25 % 10 = 5)
hash_table.insert(15, "Charlie")	# Collision with 5 (15 % 10 = 5) hash_table.insert(30, "David")
hash_table.insert(7, "Eva") hash_table.display()
# Search for some keys hash_table.search(25) hash_table.search(99) # Not present

# Delete a key hash_table.delete(15) hash_table.display()

# Insert new key to test reuse
hash_table.insert(35, "Frank") # Collision again with 5 hash_table.display()
 
